<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:text="@string/text_schedule_detail"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_subdetail_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:contentDescription="@string/app_name"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_close" />

    <View
        android:id="@+id/v_subdetail"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/iv_subdetail_close"
        android:background="@color/colorPrimaryDark" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_subdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_subdetail"
        android:scrollbars="vertical" />
</RelativeLayout>